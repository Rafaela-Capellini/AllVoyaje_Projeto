@model ProjetoAllVoyaje.Models.TipoPacote

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>TipoPacote</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TipoPacoteId" />
            <div class="form-group">
                <label asp-for="Tipo" class="control-label"></label>
                <input asp-for="Tipo" class="form-control" />
                <span asp-validation-for="Tipo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" id="BotaoNormal" class="btn btn-primary" />
                <a asp-action="Index" style="text-decoration: none; color: black">Voltar para a Lista</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
