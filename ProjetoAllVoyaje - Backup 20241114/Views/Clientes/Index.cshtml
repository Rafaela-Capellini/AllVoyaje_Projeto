@model IEnumerable<ProjetoAllVoyaje.Models.Cliente>

@{
    ViewData["Title"] = "Admin";
    Layout = "~/Views/Shared/_Layout_quatro.cshtml";
}

<h1>Index</h1>

<p>
    <button id="BotaoCriar"><a asp-action="Create" class="btn">Criar Novo</a></button>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CPF)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cargo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CPF)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cargo)
            </td>
            <td>
                 <button id="Botaoeditar"><a asp-action="Edit" asp-route-id="@item.ClienteId" class="btn">Editar</a></button>
                 <button id="Botaoeditar"><a asp-action="Details" asp-route-id="@item.ClienteId" class="btn">Detalhes</a></button>
                 <button id="BotaoNormalDelete"><a asp-action="Delete" asp-route-id="@item.ClienteId" class="btn">Deletar</a></button>
            </td>
        </tr>
}
    </tbody>
</table>
